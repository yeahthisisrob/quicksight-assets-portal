################################################################################
# LOCAL EXPRESS SERVER CONFIGURATION
################################################################################

# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# AWS Configuration for Local Development
AWS_PROFILE=default
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_ACCOUNT_ID

# QuickSight Configuration
QUICKSIGHT_IDENTITY_REGION=us-east-1

# S3 Configuration
BUCKET_NAME=quicksight-metadata-bucket-YOUR_ACCOUNT_ID

# Logging Configuration
LOG_LEVEL=INFO  # Options: ERROR, WARN, INFO, DEBUG
LOG_SAMPLE_RATE=0.1  # Sample rate for debug logs in production (0-1, where 0.1 = 10%)
SERVICE_NAME=quicksight-portal  # Service name for structured logs

################################################################################
# AUTHENTICATION OPTIONS
################################################################################

# Okta SAML Configuration
# OKTA_SAML_APP_URL=https://YOUR_OKTA_DOMAIN/app/YOUR_APP_ID/YOUR_SSO_ID/sso/saml
# OKTA_SAML_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/YOUR_ROLE_NAME
# OKTA_SAML_PROVIDER_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:saml-provider/YOUR_PROVIDER_NAME

# Cognito Configuration (set by CDK deployment)
# COGNITO_USER_POOL_ID=YOUR_USER_POOL_ID
# COGNITO_CLIENT_ID=YOUR_CLIENT_ID
# COGNITO_DOMAIN=YOUR_COGNITO_DOMAIN
# COGNITO_AUTH_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/YOUR_COGNITO_ROLE

# Session Configuration
SESSION_DURATION=3600

################################################################################
# CDK DEPLOYMENT CONFIGURATION (if you deploy to AWS)
################################################################################

# CDK_DEFAULT_ACCOUNT=YOUR_ACCOUNT_ID
# CDK_DEFAULT_REGION=us-east-1

# For CDK deployment, specify which auth method(s) to support
# SUPPORTED_AUTH_METHODS=cognito,okta